@page
@using SuperMovies.Models
@model DeleteModel
@{
    string movieName = $"\"{Model.DeleteMovie.Title}\"?";
}

<h3>Are you sure you want to delete @movieName</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.DeleteMovie.Title
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.DeleteMovie.Description
        </dd>
        <dt class="col-sm-2">
            Length
        </dt>
        <dd class="col-sm-10">
            @Model.DeleteMovie.Length_Minutes
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="DeleteMovie.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /><br />
        <br>
        <a asp-page="./Index">Back to List</a>
    </form>
</div>